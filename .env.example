# API Toolkit Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get your credentials from: https://supabase.com/dashboard/project/_/settings/api

# Project 1 (Primary)
SUPABASE_URL=https://your-project-1-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_API=your-anon-key-here

# Project 2 (Secondary) - Optional
SUPABASE_URL_2=https://your-project-2-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY_2=your-service-role-key-here
SUPABASE_ANON_API_2=your-anon-key-here

# Project 3 (Tertiary) - Optional
SUPABASE_URL_3=https://your-project-3-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY_3=your-service-role-key-here
SUPABASE_ANON_API_3=your-anon-key-here

# =============================================================================
# OTHER SERVICES (Optional)
# =============================================================================

# Klaviyo - Email Marketing
KLAVIYO_API_KEY=pk_your_key_here

# Render - Cloud Deployments
RENDER_API_KEY=your-render-api-key

# BrightData - Web Scraping
BRIGHTDATA_API_KEY=your-brightdata-api-key

# Shopify - E-commerce
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_token_here

# Smartlead - Email Campaigns
SMARTLEAD_API_KEY=your-smartlead-api-key
